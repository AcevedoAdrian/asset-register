extends ../layout/admin

block container  
  div(class="my-10")
    h2(class="text-center text-2xl font-extrabold ")= namePage
    if errors && errors.length > 0
      div(class="max-w-md mx-auto my-10 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative text-center") 
        
        ul
          each error in errors
            li(class="font-bold uppercase")= error.msg   

    div(class="bg-wite shadow py-8 px-4 rounded-lg mx-auto max-w-4xl my-10 md:px-10")
      form(
        method="POST"
        class="space-y-8"
        noValidate
        )
        div(class="space-y-8")
          h3(class="text-lg leading-6 font-medium text-gray-900") Datos del Bien
          p(class="text-gray-600") Asegurate de llenar todos los campos

          //- Number de Inventory 
          div(class="form-group")
              label(
                class="block text-sm uppercase text-gray-500 font-bold mb-2"
                for="inventory") Numero de Inventario
              input(
                id="inventory", 
                class="form-control w-full py-2 px-3  border border-gray-300 rounded-lg mb-2 placeholder-gray-500",
                placeholder="Ingresa el numero de inventario: ej. 1900355225",
                type="number", 
                name="inventory",
                value= data.inventory ? data.inventory : '',
                required
              )
          div(class="md:flex md:gap-4 space-x-5 space-y-0")
            //- Type de Asset
            div(class="form-group md:w-1/2")
              label(
                class="block text-sm uppercase text-gray-500 font-bold mb-2"
                for="typeAsset") Tipo de Bien
              select(
                id="typeAsset", 
                class="form-control w-full py-2 px-3  border border-gray-300 rounded-lg mb-2 placeholder-gray-500",
                name="typeAsset"
                )
                  option(value="") - Selecciona el tipo de bien -
                  each typeAsset in typeAssets
                    option(
                      value=typeAsset.id 
                      selected= data.typeAssetId ? data.typeAssetId == typeAsset.id ? true : false : null
                    )= typeAsset.name
            //- Status
            div(class="form-group md:w-1/2")
                label(
                  class="block text-sm uppercase text-gray-500 font-bold mb-2"
                  for="status") Estado
                select(
                  id="status", 
                  class="form-control w-full py-2 px-3  border border-gray-300 rounded-lg mb-2 placeholder-gray-500",
                  name="status", 
                  required
                )
                  option(value="") - Selecciona el estado del bien -
                  option(value="available"
                    selected= data.status ? data.status == 'available' ? true : false : null
                  ) Activo
                  option(value="unavailable"
                    selected= data.status ? data.status == 'unavailable' ? true : false : null
                  ) Inactivo
                  
          div(class="md:flex md:gap-4 space-x-5 space-y-0")
            //- Area
            div(class="form-group md:w-1/2")
              label(
                class="block text-sm uppercase text-gray-500 font-bold mb-2"
                for="area") Area
              select(
                id="area", 
                class="form-control w-full py-2 px-3  border border-gray-300 rounded-lg mb-2 placeholder-gray-500",
                name="area"
                )
                  option(value="") - Selecciona el area -
                  each area in areas
                    option(
                      value=area.id
                      selected= data.areaId ? data.areaId == area.id ? true : false : null
                    )= area.name
            //- Location
            div(class="form-group md:w-1/2")
              label(
                class="block text-sm uppercase text-gray-500 font-bold mb-2"
                for="building") Edificio
              select(
                id="building", 
                class="form-control w-full py-2 px-3  border border-gray-300 rounded-lg mb-2 placeholder-gray-500",
                name="building"
                )
                  option(value="") - Selecciona el Edificio -
                  each building in buildings
                    option(
                      value=building.id
                      selected= data.buildingId ? data.buildingId == building.id ? true : false : null
                    )= building.name
          //- Serial number 
          div(class="form-group")
              label(
                class="block text-sm uppercase text-gray-500 font-bold mb-2"
                for="serial") Numero de Serie
              input(
                id="serial", 
                class="form-control w-full py-2 px-3  border border-gray-300 rounded-lg mb-2 placeholder-gray-500",
                placeholder="Ingresa el numero de serie: ej. 40002514511",
                type="number", 
                name="serial", 
                value= data.serial ? data.serial : '',
                required
              )              

          //- Description
          div(class="form-group")
              label(
                class="block text-sm uppercase text-gray-500 font-bold mb-2"
                for="description") Descripcion
              textarea(
                id="description", 
                class="form-control w-full py-2 px-3  border border-gray-300 rounded-lg mb-2 placeholder-gray-500",
                placeholder="Ingresa la descripcion del bien",
                name="description",
                required
              )= data.description ? data.description : ''
          //- Submit
          input( class="w-full bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-lg  cursor-pointer uppercase", type="submit", value="Guardar Cambios")
          button(
            class="w-full bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg  cursor-pointer uppercase",
            type="button"
            onClick=`deleteAsset("${data.id}")`
            ) Eliminar Bien
          
      //- form(action=`/assets/delete/${data.id}`, method="POST")
      //-   input( class="w-full bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg  cursor-pointer uppercase", type="submit", value="Eliminar Bien")

block scripts
  script(src="/js/assets/delete.js")