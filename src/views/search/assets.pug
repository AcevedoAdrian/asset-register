div(class="flex flex-col md:flex-row items-center py-10 gap-4")
  h2(class="text-sm uppercase text-gray-800 font-bold  ") Filtrar Por:

    form(action="/assets/search" method="GET" class="flex justify-center items-center gap-2")
      div(class="flex items-center gap-2")
        label(for="search" class="text-sm font-medium text-gray-700") Buscar
        input(
        type="text" 
        name="inventory" 
        id="inventory" 
        class="border border-gray-200 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent shadow-sm"
        value= search && search.inventory ? search.inventory : ''
        )

      div(class="w-full md:w-auto flex items-center gap-2")
        label(
          for="typeAssets" class="text-sm w-24 uppercase text-gray-500 font-bold") Tipo de Bien
        select(
        id="typeAssets" 
        class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent " )
          option(value="") - Seleccione -
          each typeAsset in typeAssets
            option(value=typeAsset.id )= typeAsset.name 
      
      div(class="w-full md:w-auto flex items-center gap-2")
        label(for="areas" class="text-sm w-24 uppercase text-gray-500 font-bold") Area
        select(
        id="areas" 
        class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent " )
          option(value="" ) - Seleccione -
          each area in areas
            option(value=area.id )= area.name
        

      button(
      type="submit"
      class="bg-emerald-500 hover:bg-emerald-400 text-white font-bold py-2 px-4 rounded uppercase text-xs"

      ) Buscar
      
   

     
